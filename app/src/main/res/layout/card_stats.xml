<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#68696E"
    app:cardElevation="2dp"
    app:contentPadding="2dp"
    app:shapeAppearanceOverlay="@style/RoundCorner">


    <TextView
        android:id="@+id/txtName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:id="@+id/txtSurname"
        android:layout_width="70dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:id="@+id/txtPtn"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:height="30dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:height="30dp"
        android:textStyle="bold"
        android:id="@+id/txtMinute"
        ></TextView>

    <TextView
        android:id="@+id/txtReb"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="5dp"
        android:height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:id="@+id/txtBlk"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="5dp"
        android:height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:id="@+id/txtFg"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="5dp"
        android:height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

    <TextView
        android:id="@+id/txtTo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="5dp"
        android:height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_stats"></TextView>

</androidx.cardview.widget.CardView>