<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_games"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#8F9198"
    app:cardElevation="2dp"
    app:contentPadding="2dp"
    app:shapeAppearanceOverlay="@style/RoundCorner">

    <TextView
        android:id="@+id/txtAbvHome"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/card_view_games" />

    <TextView
        android:id="@+id/txtHomeTeamScore"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tiret"
        app:layout_constraintLeft_toRightOf="@+id/card_view_games" />

    <TextView
        android:id="@+id/tiret"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="170dp"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintLeft_toRightOf="@+id/txtHomeTeamScore" />

    <TextView
        android:id="@+id/txtVisitorTeamScore"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="240dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_games"
        app:layout_constraintRight_toRightOf="@id/tiret" />


    <TextView
        android:id="@+id/txtAbvVisitor"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/tiret" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="78dp"
        app:layout_constraintRight_toRightOf="@+id/card_view_games"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idWin"
        android:layout_width="53dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@+id/card_view_games"
        android:layout_marginLeft="190dp"
        android:layout_height="33dp" />


</androidx.cardview.widget.CardView>





